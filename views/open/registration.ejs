    <body>
    
    
    
    
    <div class="container" style="max-width: 50%;">
        <div style="min-height: 90vh">
            <div class="panel panel-info">
                <div class="panel-heading"><h2>Registration</h2></div>
                <div class="panel-body">
                    <form class="form-group" action="/auth/registration" method="post">
                        <input type="text" class="form-control" placeholder="Username" name="username"><br>
                        <input type="email" class="form-control" placeholder="email" name="email"><br>
                        <input type="password" class="form-control" placeholder="Password" name="password"><br>
                        <input type="password" class="form-control" placeholder="Repeat password" name="re_password"><br>
                    
                        <select class="form-control" name="role" placeholder="User type">
                            <option>Employee</option>
                            <option>Admin</option>
                            <option>Vendor</option>
                        </select><br>
                        
                        
                        <button class="btn btn-info" type="submit">Submit</button>
                        <button class="btn btn-info"><a href="/auth/login" style="color:white;text-decoration: none;">Already have an account...!!</a></button>

                    </form>
    
                   
                </div>
            </div>
        </div>
    
    
